<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagem"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:src="@drawable/img"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"/>

    <RelativeLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_gravity = "right"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Bolsa de Engenharia de Software"
            android:id = "@+id/titulo"
            android:layout_marginTop = "5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/titulo"
            android:text = "Great"
            android:id = "@+id/nome_empresa"/>

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/nome_empresa"
            android:text = "R$ 700"
            android:id = "@+id/remuneracao"/>

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/nome_empresa"
            android:layout_toRightOf="@id/remuneracao"
            android:text = "12h/sem"
            android:id = "@+id/carga_horaria"/>

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/nome_empresa"
            android:layout_toRightOf="@id/carga_horaria"
            android:text = "Manhã"
            android:id = "@+id/turno"/>

        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textAppearance = "@style/Base.TextAppearance.AppCompat.Small"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/nome_empresa"
            android:layout_toRightOf="@id/turno"
            android:text = "Há 1h"
            android:id = "@+id/tempo"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/selo"
            android:scaleType="fitXY"
            android:layout_below="@+id/nome_empresa"
            android:layout_alignParentRight="true"
            android:layout_toStartOf="@id/remuneracao"
            android:layout_marginRight="30px"
            android:src="@drawable/selo" />

    </RelativeLayout>

</LinearLayout>
